    <!-- Sell Item Modal -->
    <div id="sell-item-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Sell Item</h2>
            <form id="sell-item-form">
                <label for="product-name">Product Name:</label>
                <input type="text" id="product-name" name="product-name" required><br><br>
                <label for="product-price">Price:</label>
                <input type="number" id="product-price" name="product-price" required><br><br>
                <label for="product-rating">Rating:</label>
                <input type="number" id="product-rating" name="product-rating" min="0" max="5" step="0.1" required><br><br>
                <label for="product-image">Product Image:</label>
                <input type="file" id="product-image" name="product-image" accept="image/*" required><br><br>
